
script(src="javascripts/users/tiago.js")

link(rel='stylesheet', href='/stylesheets/tiago.css')

style.
    .tiago-dummy {

        position : absolute;
        background : green;
        width : 20px;
        height : 20px;
    }

script.

    $(function(){

        $node = $('#tiago .tiago-dummy:first')
        console.log($node)

        var n

        $.ajax({
            url : "/tiago/rand",
            type: "GET",
        }).done(function(data) {

            console.log(data)
            tick = true
            n = parseFloat(data)
            draw()
        })

        $('.tiago-end').click(function(){

            tick = !tick
            draw()
        })

        function draw(){

            var x = n + Math.random() * 100
            var y = n + Math.random() * 100

            $node.css({ top : x, left : y })
            if(tick)
                window.requestAnimationFrame(draw)
        }
    })

.tiago-dummy
button.tiago-end toggle
